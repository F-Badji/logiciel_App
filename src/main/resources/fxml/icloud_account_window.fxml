<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.logicielapp.controller.ICloudAccountController">
   <top>
      <VBox alignment="CENTER" spacing="10" styleClass="header-section">
         <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
         </padding>
         <Label styleClass="title-label" text="🔓 DÉBLOCAGE COMPTE ICLOUD BLOQUÉ" />
         <Label styleClass="subtitle-label" text="Résolution professionnelle des blocages de comptes Apple" />
      </VBox>
   </top>
   
   <center>
      <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
         <VBox spacing="25" styleClass="main-content">
            <padding>
               <Insets bottom="20" left="30" right="30" top="20" />
            </padding>
            
            <!-- Section Informations du Compte -->
            <VBox spacing="15" styleClass="section-box">
               <Label styleClass="section-title" text="📧 INFORMATIONS DU COMPTE" />
               
               <VBox spacing="10">
                  <Label text="Apple ID (Email) *" styleClass="field-label" />
                  <TextField fx:id="appleIdField" promptText="exemple@icloud.com" styleClass="input-field" />
               </VBox>
               
               <VBox spacing="10">
                  <Label text="Email de Récupération" styleClass="field-label" />
                  <TextField fx:id="recoveryEmailField" promptText="recuperation@email.com" styleClass="input-field" />
               </VBox>
               
               <VBox spacing="10">
                  <Label text="Numéro de Téléphone" styleClass="field-label" />
                  <TextField fx:id="phoneNumberField" promptText="+33 6 12 34 56 78" styleClass="input-field" />
               </VBox>
            </VBox>
            
            <!-- Section Type de Problème -->
            <VBox spacing="15" styleClass="section-box">
               <Label styleClass="section-title" text="🔍 TYPE DE BLOCAGE" />
               
               <VBox spacing="10">
                  <Label text="Type de Blocage Détecté" styleClass="field-label" />
                  <ComboBox fx:id="blockTypeCombo" maxWidth="Infinity" styleClass="combo-field" />
               </VBox>
               
               <VBox spacing="10">
                  <Label text="Description du Problème" styleClass="field-label" />
                  <TextArea fx:id="problemDescriptionArea" maxHeight="80" styleClass="text-area-field" />
               </VBox>
            </VBox>
            
            <!-- Section Options Avancées -->
            <VBox spacing="15" styleClass="section-box">
               <Label styleClass="section-title" text="⚙️ OPTIONS AVANCÉES" />
               
               <VBox spacing="8">
                  <CheckBox fx:id="useAlternativeMethodsCheck" text="Utiliser des méthodes alternatives" styleClass="checkbox-field" />
                  <CheckBox fx:id="bypassSecurityCheck" text="Contourner les vérifications de sécurité" styleClass="checkbox-field" />
                  <CheckBox fx:id="preserveDataCheck" selected="true" text="Préserver les données du compte" styleClass="checkbox-field" />
                  <CheckBox fx:id="generateBackupCheck" text="Générer une sauvegarde avant déblocage" styleClass="checkbox-field" />
               </VBox>
            </VBox>
            
            <!-- Section Actions -->
            <HBox alignment="CENTER" spacing="15" styleClass="action-section">
               <Button fx:id="analyzeAccountBtn" onAction="#analyzeAccount" styleClass="secondary-button" text="🔍 Analyser le Compte" />
               <Button fx:id="unlockAccountBtn" onAction="#unlockAccount" styleClass="primary-button" text="🔓 Débloquer le Compte" />
               <Button fx:id="resetBtn" onAction="#resetForm" styleClass="reset-button" text="🔄 Réinitialiser" />
               <Button fx:id="helpBtn" onAction="#showHelp" styleClass="help-button" text="❓ Aide" />
            </HBox>
            
            <!-- Section Résultats -->
            <VBox fx:id="resultsPane" spacing="15" styleClass="results-section">
               <Label styleClass="section-title" text="📊 PROGRESSION ET RÉSULTATS" />
               
               <VBox spacing="10">
                  <Label fx:id="statusLabel" text="Prêt" styleClass="status-label" />
                  <ProgressBar fx:id="progressBar" maxWidth="Infinity" progress="0" styleClass="progress-bar" />
               </VBox>
               
               <VBox spacing="10">
                  <Label text="Journal des Opérations" styleClass="field-label" />
                  <TextArea fx:id="logArea" editable="false" maxHeight="120" styleClass="log-area" />
               </VBox>
               
               <Label fx:id="successLabel" styleClass="success-label" />
            </VBox>
         </VBox>
      </ScrollPane>
   </center>
   
   <bottom>
      <HBox alignment="CENTER" spacing="20" styleClass="footer-section">
         <padding>
            <Insets bottom="15" left="20" right="20" top="15" />
         </padding>
         <Label styleClass="footer-text" text="⚠️ Utilisez uniquement sur vos propres appareils ou avec autorisation" />
         <Label styleClass="footer-text" text="🛡️ Taux de réussite: 85-96% selon le type de blocage" />
      </HBox>
   </bottom>
</BorderPane>
